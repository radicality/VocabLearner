<div class="row">
  <div class="span14">

    <div id="learn">

      <h3>Do you know what this means? </h3> 
      <h1><%= @entry.name.upcase %> </h1>


      <div id="learn_response">
        <%= form_tag yes_path, :method => 'post' do %>
          <%= hidden_field_tag 'id', @entry.id %>
          <%= submit_tag "Yes!", class: "btn large success" %>
        <% end %>

        <%= form_tag no_path, :method => 'post', remote: true do %>
          <%= hidden_field_tag 'id', @entry.id %>
          <%= submit_tag "No...", class: "btn large danger", id: :no %>
        <% end %>
      </div>

      <div id="definition" style="display: none">
        <%=raw sanitize(simple_format(@entry.definition), :tags => %w(br p) ) %>
        <%= link_to 'Another Word!', random_path, class: "btn large" %> 
      </div>

    </div>

  </div>
</div>

