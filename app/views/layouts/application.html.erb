<!DOCTYPE html>
<html>
<head>
  <title>Words</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="topbar"> 
  <div class="fill"> 
    <div class="container"> 
      <a class="brand" href="#">VocabLearner</a> 
      <ul class="nav"> 
        <li><%= link_to 'Home', root_url %></li> 
        <li><%= link_to 'Words', entries_path %></li> 
      </ul> 
      <form action="" class="pull-right"> 

        <% if current_user %>
          Welcome <%= current_user.name %>
          <%= link_to 'Sign out!', signout_path %>
        <% else %>
          <a href="/auth/twitter/">
            <button class="btn" type="submit">Sign in with Twitter</button>
          </a>
        <% end %>

      </form> 
    </div> 
  </div> 
</div>

<div class="container"> 

  <% if notice %>
    <div class="alert-message warning">
      <a class="close" href="#">x</a>
      <p> <%= notice %> </p>
    </div>
  <% end %>

  <div class="content"> 
    <%= yield %>
  </div> 

  <footer> 
  <p>&copy; Company 2011</p> 
  </footer> 

</div>

</body>
</html>
