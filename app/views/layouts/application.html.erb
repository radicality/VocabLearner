<!DOCTYPE html>
<html>
<head>
  <title>Words</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="topbar"> 
  <div class="fill"> 
    <div class="container"> 
      <%= link_to 'VocabLearner', root_url, class: :brand %>
      <ul class="nav"> 
        <li><%= link_to 'Home', root_url %></li> 
        <li><%= link_to 'Your Vocab', entries_path %></li> 
        <li><%= link_to 'Learn', learn_path %></li> 
      </ul> 

        <% if current_user %>
          <ul class="nav secondary-nav">
            <li class="dropdown" data-dropdown="dropdown">
              <a href="#" class="dropdown-toggle">Hello <%= current_user.name %> </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to 'Log out!', signout_path %>
                </li>
              </ul>
            </li>
          </ul>
        <% else %>
          <form action="" class="pull-right"> 
          <a href="/auth/twitter/">
            <button class="btn" type="submit">Sign in with Twitter</button>
          </a>
          </form>
        <% end %>

      </form> 
    </div> 
  </div> 
</div>

<div class="container"> 

  <% if notice %>
    <div class="alert-message warning">
      <a class="close" href="#">x</a>
      <p> <%= notice %> </p>
    </div>
  <% end %>

  <div class="content"> 
    <%= yield %>
  </div> 

  <footer> 
  <p>&copy; rafal.io 2011</p> 
  </footer> 

</div>

</body>
</html>
